{% extends '::base.html.twig' %}
{% block body %}
<div class="row">
    <div class="security">

    <legend>Авторизация</legend>
    {% if error %}
        <div class="alert alert-danger">{{ error.message }}</div>
    {% endif %}

        <form action="{{ path("login_check") }}" method="post" class="form-horizontal">
            <div class="form-group">
                <label for="username" class="col-xs-4 control-label">Логин</label>
                <div class="col-xs-6">
                    <input type="text" class="form-control" id="username" required="required" name="_username" value="{{ last_username }}" />
                </div>
            </div>

            <div class="form-group">
                <label for="password" class="col-xs-4 control-label">Пароль</label>
                <div class="col-xs-6">
                    <input type="password" class="form-control" required="required" id="password" name="_password" />
                </div>
            </div>

            <div class="form-group">
                <label for="password" class="col-xs-4 control-label"></label>
                <div class="col-xs-6">
                    <input type='checkbox' name='_remember_me' id='remember' checked='checked'/>
                    Запомнить меня
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-4"></div>
                <div class="col-xs-6">
                    <input type="submit" value="Войти" class="btn btn-sm btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}